<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network / Backend -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VendorPro"
        tools:targetApi="31">

        <!-- ðŸ”¹ LOGIN (Launcher) -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ DASHBOARD -->
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="false" />

        <!-- ðŸ”¹ MENU (ðŸ”¥ THIS WAS MISSING) -->
        <activity
            android:name=".ui.MenuActivity"
            android:exported="false" />

        <!-- ðŸ”¹ ORDERS -->
        <activity
            android:name=".ui.OrdersActivity"
            android:exported="false" />

        <!-- ðŸ”¹ ORDER DETAIL -->
        <activity
            android:name=".ui.OrderDetailActivity"
            android:exported="false" />

        <!-- ðŸ”¹ ADD / EDIT MENU ITEM -->
        <activity
            android:name=".ui.AddEditMenuItemActivity"
            android:exported="false" />

        <!-- ðŸ”¹ MAIN (Optional splash / redirect activity) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- ðŸ”¹ Firebase FCM Service -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>
